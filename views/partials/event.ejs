        <button class="updatebutton" id="deletebutton" type="submit">ðŸ—‘</button>
    </form>
    <button class="updatebutton" id="editbutton" onclick='editEventOpenMenu(<%- JSON.stringify(event) %>, <%- JSON.stringify(flatmates) %>)'>âœŽ</button>
