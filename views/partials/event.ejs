        <button class="updatebutton" id="deletebutton" type="submit">ðŸ—‘</button>
    </form>
    <button class="updatebutton" id="editbutton" onclick='editEventOpenMenu(<%- JSON.stringify(event) %>)'>âœŽ</button>
    <p><b>Name:</b> <%- event.title %></p>
    <p><b>Description:</b></p>
    <p><%- event.descr %></p>
    <p><b>Start:</b> <%- event.start %></p>
    <p><b>End:</b> <%- event.end %></p>
</div>