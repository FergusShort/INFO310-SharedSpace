<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bills Management</title>
    <link rel="stylesheet" href="/styles/bills.css">
</head>
<body>
    <h1>Bills</h1>
    
    <!-- Form for adding the bills -->
    <form action="/bills/add" method="POST">
        <input type="text" name="title" placeholder="Bill Title" required>
        <input type="number" name="amount" placeholder="Total Amount" step="0.01" required>
        <input type="date" name="due_date" required>
        <label>
            <input type="checkbox" name="recurring"> Recurring
        </label>
        <input type="number" name="time_period" placeholder="Days between recurrences">
        <button type="submit">Add Bill</button>
    </form>

   <!-- Bills Table -->
   <% if (bills && bills.length > 0) { %>
        <table>
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Amount</th>
                    <th>Due Date</th>
                    <th>Status</th>
                    <th>Remaining</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% bills.forEach(bill => { %>
                    <tr>
                        <td><%= bill.title %></td>
                        <td>$<%= bill.amount %></td>
                        <td><%= bill.due_date %></td>
                        <td><%= bill.payment_status %></td>
                        <td>$<%= (bill.amount - bill.amount_paid).toFixed(2) %></td>
                        <td>
                            <% if (bill.amount_paid < bill.amount) { %>
                                <form action="/bills/pay" method="POST">
                                    <input type="hidden" name="bill_id" value="<%= bill.bill_id %>">
                                    <button type="submit">Paid My Share</button>
                                </form>
                            <% } %>
                            <form action="/bills/delete" method="POST">
                                <input type="hidden" name="bill_id" value="<%= bill.bill_id %>">
                                <button type="submit">Delete</button>
                            </form>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    <% } else { %>
        <p>No bills to show. Add a new bill!</p>
    <% } %>
</body>
</html>
